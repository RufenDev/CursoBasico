<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <size
                android:width="32dp"
                android:height="32dp" />
            <corners android:radius="6dp" />
            <stroke
                android:width="1dp"
                android:color="@color/white" />
        </shape>
    </item>

    <item
        android:bottom="4dp"
        android:drawable="@drawable/ic_grid_display_unchecked"
        android:end="4dp"
        android:start="4dp"
        android:top="4dp" />

</layer-list>